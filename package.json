  "description": "",
  "devDependencies": {
    "@faker-js/faker": "^9.2.0",
    "@playwright/test": "^1.48.2",
    "@types/node": "^22.9.0",
    "allure-commandline": "^2.32.0",
    "allure-playwright": "^3.0.6",
    "mkdirp": "^3.0.1",
    "rimraf": "^6.0.1"
  }
}
